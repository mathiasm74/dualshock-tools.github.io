{
    "name": "dualshock-tools",
    "version": "1.0.0",
    "description": "Web-based calibration tool for PlayStation DualShock 4, DualSense, and DualSense Edge controllers",
    "main": "dist/js/core.js",
    "scripts": {
        "build": "npm run lint && npm run clean && npm run compile && npm run process-lang && npm run minify",
        "clean": "rimraf dist",
        "compile": "tsc",
        "lint": "eslint js/**/*.js",
        "process-lang": "node build/process-lang.js",
        "minify": "node build/minify.js",
        "test-build": "node build/test-build.js",
        "dev": "npm run build && node serve-https.js",
        "start": "node serve-https.js"
    },
    "keywords": [
        "dualshock",
        "dualsense",
        "controller",
        "calibration",
        "webhid"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/bootstrap": "^5.2.10",
        "@types/jquery": "^3.5.33",
        "@types/w3c-web-hid": "^1.0.6",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.0",
        "rimraf": "^5.0.5",
        "terser": "^5.29.2",
        "typescript": "^5.4.2"
    }
}
